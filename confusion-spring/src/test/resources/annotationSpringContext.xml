<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <context:component-scan base-package="net.radai.confusion.spring"/>
    <context:annotation-config/>

    <bean id="confService" class="net.radai.confusion.spring.SpringAwareConfigurationService">
        <constructor-arg>
            <bean class="net.radai.confusion.core.SimpleConfigurationService">
                <constructor-arg type="java.lang.Class" value="net.radai.confusion.cats.Cats"/>
                <constructor-arg type="net.radai.confusion.core.spi.Poller">
                    <bean class="net.radai.confusion.core.fs.PathWatcher">
                        <constructor-arg type="java.io.File" value="file:#{systemProperties['confFile']}"/>
                    </bean>
                </constructor-arg>
                <constructor-arg type="net.radai.confusion.core.spi.BeanCodec">
                    <bean class="net.radai.confusion.ini.IniBeanCodec" />
                </constructor-arg>
                <constructor-arg type="net.radai.confusion.core.spi.BeanPostProcessor">
                    <bean class="net.radai.confusion.beanvalidation.BeanValidationPostProcessor"/>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>
</beans>